@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product Listings";
}

<h2>Product Listings</h2>

<a asp-action="Create" asp-controller="Product" class="btn btn-primary">
    Create Product
</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count() == 0)
{
    <div class="alert alert-info">
        No products available.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.First().SKU)</th>
                <th>@Html.DisplayNameFor(m => m.First().Price)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(p => product.Name)</td>
                    <td>@Html.DisplayFor(p => product.SKU)</td>
                    <td>@Html.DisplayFor(p => product.Price)</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Update</a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
    </table>
}